{
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsxImportSource": "preact",
        "jsx": "react-jsx",
        "types": [
            "node",
            "ffi-napi"
        ],
        "isolatedModules": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "target": "ES6",
        "module": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noEmit": true,
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}